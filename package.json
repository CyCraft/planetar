{
  "name": "planetar",
  "private": true,
  "scripts": {
    "audit": "npm audit fix && lerna-audit && lerna bootstrap",
    "commit": "git-cz",
    "dev": "npm run start-dev && cd packages/dev && npm run dev",
    "dev-tsx": "npm run start-dev && cd packages/dev-tsx && npm run dev",
    "test": "lerna run test",
    "build": "npm run start-build && lerna run build && npm run build:vue-int",
    "build:vue-int": "lerna run vue-int && ts-node scripts/vueInt.ts",
    "build:favicon": "copyfiles --up 1 'media' packages/docs/public",
    "build-and-publish": "npm run build && git add -A && git commit -m \"chore: build\" && lerna publish && npm run start-dev && git add -A && git commit -m \"chore: post-build\" && git push",
    "publish": "lerna publish",
    "replace-dist-src": "replace-in-files --string='\"module\": \"dist/index.js\"' --replacement='\"module\": \"src/index.js\"' 'packages/*/package.json'",
    "replace-src-dist": "replace-in-files --string='\"module\": \"src/index.js\"' --replacement='\"module\": \"dist/index.js\"' 'packages/*/package.json'",
    "replace-node_modules-styles": "replace-in-files --string=\"@import 'node_modules/@planetar/styles'\" --replacement=\"@import '@planetar/styles'\" 'packages/**/*.vue'",
    "replace-styles-node_modules": "replace-in-files --string=\"@import '@planetar/styles'\" --replacement=\"@import 'node_modules/@planetar/styles'\" 'packages/**/*.vue'",
    "start-dev": "npm run replace-dist-src && npm run replace-node_modules-styles",
    "start-build": "npm run replace-src-dist && npm run replace-styles-node_modules",
    "dep:install": "npm i && lerna bootstrap",
    "dep:update-all": "ncu --target minor -u && lerna exec 'ncu --target minor -u' && npm run dep:install",
    "dep:check-for-updates": "ncu --target minor && lerna exec 'ncu --target minor'",
    "dep:reinstall-all": "rimraf node_modules && lerna clean -y && npm run dep:install"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^13.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.5",
    "@types/webpack-env": "^1.15.3",
    "autoprefixer": "^9.8.6",
    "chalk": "^2.4.2",
    "commitizen": "^4.2.1",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.2.0",
    "node-sass": "^4.14.1",
    "npm-check-updates": "^9.0.4",
    "open": "^6.4.0",
    "postcss": "^7.0.35",
    "postcss-rtl": "^1.7.3",
    "prettier": "^2.1.2",
    "replace-in-files-cli": "^0.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-vue": "^5.1.9",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "uglify-es": "^3.3.10",
    "vue-compile": "^0.6.0",
    "vue-intellisense": "^0.1.0",
    "vue-template-compiler": "^2.6.12",
    "zlib": "^1.0.5"
  },
  "author": "Luca Ban - Mesqueeb",
  "license": "MIT",
  "homepage": "https://github.com/cycraft/planetar#readme",
  "bugs": {
    "url": "https://github.com/cycraft/planetar/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
