{
  "name": "planetar",
  "private": true,
  "scripts": {
    "audit": "lerna-audit",
    "commit": "git-cz",
    "dev": "cd packages/dev && npm run dev",
    "with-compile-step--dev": "npm run start-dev && cd packages/dev && npm run dev",
    "dev-tsx": "npm run start-dev && cd packages/dev-tsx && npm run dev",
    "test": "lerna run test",
    "build": "lerna run build",
    "with-compile-step--build": "npm run start-build && lerna run build",
    "build:api-card": "npm run start-build && cd packages/api-card && npm run build",
    "build:api-card-NEW": "cd packages/api-card && vue-compile src -o dist",
    "build:example-card": "npm run start-build && cd packages/example-card && npm run build",
    "build:component-gallery": "npm run start-build && cd packages/component-gallery && npm run build",
    "build:vue-int": "lerna exec \"vue-int -i src/components -r -o vetur\"",
    "publish": "lerna publish",
    "with-compile-step--publish": "npm run build && git add -u && git commit -m \"chore: build\" && lerna publish && npm run start-dev && git add -u && git commit -m \"chore: post-build\"",
    "replace-dist-src": "replace-in-files --string='\"module\": \"dist/index.esm.js\"' --replacement='\"module\": \"src/index.js\"' 'packages/(api-card|example-card|component-gallery)/package.json'",
    "replace-src-dist": "replace-in-files --string='\"module\": \"src/index.js\"' --replacement='\"module\": \"dist/index.esm.js\"' 'packages/(api-card|example-card|component-gallery)/package.json'",
    "start-dev": "npm run replace-dist-src",
    "start-build": "npm run replace-src-dist",
    "dep:install": "npm i && lerna bootstrap",
    "dep:update-all": "ncu --target minor -u && lerna exec 'ncu --target minor -u' && npm run dep:install",
    "dep:check-for-updates": "ncu --target minor && lerna exec 'ncu --target minor'",
    "dep:reinstall-all": "rimraf node_modules && lerna clean -y && npm run dep:install"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^13.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/node": "^14.6.2",
    "@types/webpack-env": "^1.15.2",
    "autoprefixer": "^9.8.6",
    "chalk": "^2.4.2",
    "commitizen": "^4.2.1",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.2.0",
    "node-sass": "^4.14.1",
    "npm-check-updates": "^9.0.1",
    "open": "^6.4.0",
    "postcss": "^7.0.32",
    "postcss-rtl": "^1.7.3",
    "prettier": "^2.1.1",
    "replace-in-files-cli": "^0.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-vue": "^5.1.9",
    "uglify-es": "^3.3.10",
    "vue-compile": "^0.6.0",
    "vue-intellisense": "^0.1.0",
    "vue-template-compiler": "^2.6.12",
    "zlib": "^1.0.5"
  },
  "author": "Luca Ban - Mesqueeb",
  "license": "MIT",
  "homepage": "https://github.com/cycraft/planetar#readme",
  "bugs": {
    "url": "https://github.com/cycraft/planetar/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
